@model LoginViewModel
@{
    ViewData["Title"] = "Sign In Page";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SignIn">
            <input class="text email" type="email" asp-for="Email" placeholder="Email" required="">
            <span asp-validation-for="Email"></span>
            <input class="text" type="password" asp-for="Password" placeholder="Password" required="">
            <span asp-validation-for="Password"></span>

            <br />
            <div class="wthree-text">
                <label class="anim">
                    <input type="checkbox" asp-for="RememberMe" class="checkbox">
                    <span>Remember Me</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNIN">
        </form>
        <div class="row justify-content-between">
            <div class="col-6">

                <p>You Don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
            </div>
            <div class="col-6 mt-3">

                <p>
                    <a asp-action="ForgetPassword" asp-controller="Account">Forget Password?</a>
                </p>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
